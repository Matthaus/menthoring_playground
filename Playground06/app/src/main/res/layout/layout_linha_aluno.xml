<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp">

    <TextView
        android:id="@+id/lbl_nome_aluno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:text="Nome: " />

    <TextView
        android:id="@+id/tv_nome_aluno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/lbl_nome_aluno"
        tools:text="Matthaus" />

    <TextView
        android:id="@+id/lbl_documento_aluno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/lbl_nome_aluno"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Documento: " />

    <TextView
        android:id="@+id/tv_documento_aluno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_nome_aluno"
        app:layout_constraintStart_toEndOf="@id/lbl_documento_aluno"
        tools:text="MG123456" />





</androidx.constraintlayout.widget.ConstraintLayout>